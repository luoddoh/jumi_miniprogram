/* pages/home/home.wxss */
page{
  height: 100vh;
}
.page{
  overflow: hidden;
  height: 100vh;
}
.block{
  border-radius: 8rpx;
  background-color: rgb(242,242,242);
  padding: 80rpx 10rpx 0;
  height: 100vh;
}
.head_top_box{
  margin: 0rpx auto;
  padding: 40rpx 0 16rpx;
  width: 660rpx;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 42rpx;
  border-bottom: 4rpx solid gray;
  display: flex;
  align-items: center;
  justify-content: center;
}
.bolckBox{
  width: 500rpx;
  min-height: 300rpx;
  margin: 10rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  border-radius: 12rpx;
  transform: scale(0.9);
}
.bolckBox:first-child{
  background-color: rgb(7,193,96);
}
.bolckBox:nth-child(2){
  background-color: rgb(127,179,55);
}
.bolckBox:nth-child(3){
  background-color: rgb(203,164,63);
}
.bolckBox:nth-child(4){
  background-color: rgb(85, 124, 196);
}
.bolckBox .icon{
  font-size: 100rpx;
  font-weight: bold;
}
.bolckBox .title{
  font-size: 50rpx;
  font-weight: bold;
}
.logo{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}